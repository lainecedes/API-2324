<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('partials/head.ejs'); %>
    <link rel="stylesheet" href="/styles/general.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <title>Profile Page - Music Gallery</title>
</head>

<body>

    <!-- userProfileData, tracksData -->
    <main>
        <h1>Profile Page</h1>

        <section>
            <!-- cover grids -->
            <div class="grid-container">
                <ul class="grid">
                      <!-- Profile card -->
                    <div class="profile-card">
                        <img src="<%= userProfileData.images[1].url %>" alt="Spotify Image">
                        <h2><%= userProfileData.display_name %></h2>
                        <p>@<%= userProfileData.id %></p>
                    </div>

                    <% imageUrl.forEach(cover => { %>
                        <li>
                            <img src="<%= cover %>" alt="Image">
                        </li>
                    <% }); %>
                </ul>
             </div>
        </section>

        <section>
            <p>Get your recommended gallery</p>
            <button id="themeButton" class="themeButton" onclick="themeSwitch()"></button>
        </section>
    </main>
 <script defer="" src="/scripts/index.js"></script>
</body>
</html>